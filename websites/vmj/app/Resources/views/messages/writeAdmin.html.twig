{% extends 'layout/layoutBO.html.twig' %}
{% block titrepage %} Ecrire à un admin {% endblock titrepage %}
{% block body %}

    <div class="wrap">
        <section class="app-content">
            <div class="row">
                <div class="col-md-2">
                    <div class="app-action-panel" id="compose-action-panel">
                        <div class="action-panel-toggle" data-toggle="class" data-target="#compose-action-panel" data-class="open">
                            <i class="fa fa-chevron-right"></i>
                            <i class="fa fa-chevron-left"></i>
                        </div><!-- .app-action-panel -->

                        <div class="m-b-lg">
                            <a href="{{path('messages_inbox')}}" type="button" class="btn action-panel-btn btn-default btn-block">Retour reception</a>
                        </div>

                        <div class="app-actions-list scrollable-container">
                            <!-- mail category list -->
                            <div class="list-group">
                                <a href="{{path('messages_inbox')}}" class="text-color list-group-item"><i class="m-r-sm fa fa-envelope"></i>Reçus</a>
                                <a href="{{path('messages_outbox')}}" class="text-color list-group-item"><i class="m-r-sm fa fa-paper-plane"></i>Envoyés</a>
                                <a href="{{path('messages_write_admin')}}" class="text-color list-group-item"><i class="m-r-sm fa fa-user-secret"></i>Ecrire admin</a>
                            </div><!-- .list-group -->

                        </div><!-- .app-actions-list -->
                    </div><!-- .app-action-panel -->
                </div><!-- END column -->

                <div class="col-md-10">
                    <div class="panel panel-default new-message">						
                        {{ form_start(form) }}
                        <div class="panel-body">
                            <div class="form-group">
                                {#{{ form_widget(form.destinataire, {'attr': {'class': 'form-control', 'placeholder' : 'A: '}) }}#}
                    
                                <span> Ecrire à: Administration</span>
                            </div><!-- .form-group -->

                            <div class="form-group">
                                {#{{ form_widget(form.objet, {'attr': {'class': 'form-control', 'placeholder' : 'Objet '}) }}#}
                                <label>Objet: </label>
                                <input type="text" class="form-control" name="messages[objet]" value="{{messageObjet}}"/>
                            </div><!-- .form-group -->

                            {{ form_widget(form.message, {'attr': {'class': 'form-control full-wysiwyg', 'placeholder' : 'Ecrivez-ici'}}) }}
                        </div><!-- .panel-body -->

                        <div class="panel-footer clearfix">
                            <div class="pull-right">
                                <button type="submit" name="submit" class="btn btn-primary">Envoyer <i class="fa fa-send"></i></button>
                            </div>
                        </div><!-- .panel-footer -->



                        {{ form_end(form) }}
                    </div><!-- .panel -->
                </div><!-- END column -->
            </div><!-- .row -->
        </section><!-- .app-content -->
    </div><!-- .wrap -->


{% endblock %}
