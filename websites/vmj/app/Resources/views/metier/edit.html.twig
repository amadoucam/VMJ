{% extends 'layout/layoutBO.html.twig' %}

{% block body %}
    <h1>Modification du métier</h1>
    {% set role_user = app.user.roles[0] %}
    {{ form_start(edit_form) }}
        <div class="form-group">
            {{ form_label(edit_form.name, 'Nom') }}{{ form_widget(edit_form.name) }}
        </div>
        <div class="form-group">
            {{ form_label(edit_form.categorieJob, 'Catégorie') }}{{ form_widget(edit_form.categorieJob) }}
        </div>
        <div class="form-group">
            {{ form_label(edit_form.banniere, 'Bannière') }}{{ form_widget(edit_form.banniere) }}
        </div>
        <div class="form-group">
            {{ form_label(edit_form.imgPresentation, 'Image de présentation') }}{{ form_widget(edit_form.imgPresentation) }}
        </div>
        <input type="submit" class="btn btn-success" value="Modifier" />
    {{ form_end(edit_form) }}

    <ul>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" class="btn btn-danger" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
        <li>
            {% if role_user == 'ROLE_PRO' %}
                <a href="{{ path('dashboard_pro_metiers') }}">Retour à la liste</a>
            {% else %}
                <a href="{{ path('admin_metier_index') }}">Retour à la liste</a>
            {% endif %}
        </li>
    </ul>
{% endblock %}
