{% extends 'layout/layoutBO.html.twig' %}
{% block body %}
    <h1>Liste des metiers</h1>
 <ul>
        <li>
            <a href="{{ path('admin_categoriejob_new') }}">Creer nouveau</a>
        </li>
    </ul>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Modified</th>
                <th>Created</th>
                <th>Actif ?</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorieJob in categorieJobs %}
            <tr>
                {#<td><a href="{{ path('admin_categoriejob_show', { 'id': categorieJob.id }) }}">{{ categorieJob.id }}</a></td>#}
                <td>{{ categorieJob.name }}</td>
                <td>{% if categorieJob.modified %}{{ categorieJob.modified|date('d-m-Y H:i:s') }}{% endif %}</td>
                <td>{% if categorieJob.created %}{{ categorieJob.created|date('d-m-Y H:i:s') }}{% endif %}</td>
                <td>{% if categorieJob.actif %}Oui {% else %}Non {% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_categoriejob_show', { 'id': categorieJob.id }) }}">Voir</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_categoriejob_edit', { 'id': categorieJob.id }) }}">Modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   
{% endblock %}
