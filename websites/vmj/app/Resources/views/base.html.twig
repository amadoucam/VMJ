                {% if newsletterForm is defined %}
                    <div class="col-md-6 newsletter ">
                        <div class=" text-center">
                            <h2 class="fs-h2-responsive">Newsletter</h2>
                            <p>Toute l'actualité Viemonjob <br>
                                et que des bonnes nouvelles&#8239;! <br> <br>
                                {{ form_start(newsletterForm) }}
                            <div class="col-lg-12 inputnewsletter">
                                <div class="input-group">
                                        {{ form_widget(newsletterForm.email) }}
                                    <span class="input-group-btn zindex1">
                                        <button class="btn btn-default bouton-rond-orange zindex1 pl20 pr20 fontstyleinput2 fw400" type="submit">ok</button>
                                    </span>
                                </div><!-- /input-group -->
                            </div><!-- /.col-lg-6 -->
