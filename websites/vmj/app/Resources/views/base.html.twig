        {% block temoignages %}
            <!--caroussel -->
            {% if temoignages is defined and temoignages %}
                {% set compteurTemoignage = 0 %}
                <section class="fondjaune pt50   fondslidejaune">

                    <div id="text-carousel" class="carousel slide" data-ride="carousel">
                        <!-- Wrapper for slides -->
                        <div class="row ">
                            <div class="col-md-offset-3 col-md-6 col-xs-offset-1 col-xs-10">
                                <br>
                                <br>
                                <div class="carousel-inner txt1slid"> 
                                    {% for temoignage in temoignages %}
                                        {% set compteurTemoignage = compteurTemoignage + 1 %}
                                        <div class="item {% if compteurTemoignage == 1 %}active{% endif %}">
                                            <div class="carousel-content  ">
                                                <div class=" ">
                                                    <div class="row blanc" style="text-align: center">
                                                        {% for i in 1..5 %}
                                                            {% if i <= temoignage.note %}
                                                                <i class="glyphicon glyphicon-star"></i>
                                                            {% else %}
                                                                <i class="glyphicon glyphicon-star-empty"></i>
                                                            {% endif %}
                                                        {% endfor %}
                                                    </div>
                                                    <span class=" fsitalic blanc  ">{{temoignage.temoignage}}  <br>
                                                    </span> 
                                                    <div class="col-sm-6">
                                                        &#8239;
                                                    </div> 
                                                    <div class="col-sm-6 text-left blanc txt2slid">

                                                        <span class="text-left fw400">{{temoignage.redacteur.firstname}} </span><br>
                                                        <span class="text-left fw100">Immersion « {{temoignage.immersion.title}} »</span><br>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}

                                </div>
                            </div>
                        </div>
                        <!-- Controls -->
                        <a class="leftvmj1 carousel-control" href="#text-carousel" data-slide="prev">
                            <span class="fa fa-chevron-left"></span>
                        </a>
                        <a class="rightvmj1 carousel-control" href="#text-carousel" data-slide="next">
                            <span class="fa fa-chevron-right"></span>
                        </a>
                    </div>
                    <!-- and container -->
                </section>
            {% endif %}
